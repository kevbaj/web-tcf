<h1>Donations</h1>
<div class="row">
    <div class="col">
        <button type="button" id="btnNew" name="btnNew" class="btn btn-primary" >ADD DONATION</button>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <th>DATE</th>
                <th>APPEAL</th>
                <th>DONOR ID</th>
                <th>DONOR NAME</th>
                <th>AMOUNT</th>
                <th>REMARKS</th>
                <th>&nbsp;</th>
            </thead>
            <tbody>
                {{#each dn_res}}
                <tr>
                    <td>{{dtname}}</td>
					<td>{{ap_name}}</td>
                    <td>{{dnr_id}}</td>
					<td>{{dname}}</td>
					<td>{{dn_amt}}</td>
                    <td>{{dn_remarks}}</td>
					<td><button class="edit-btn btn btn-secondary" data-id="{{DTN_ID}}" data-bs-toggle="modal" data-bs-target="#edit-modal">Edit</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    document.getElementById("btnNew").onclick = function () {
        location.href = "/donations/add";
    };
</script>