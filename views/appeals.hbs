<h1>Appeals</h1>
<div class="row">
    <div class="col">
        <button type="button" id="btnNew" name="btnNew" class="btn btn-primary" >NEW APPEAL</button>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <th>APPEAL ID</th>
                <th>APPEAL NAME</th>
                <th>EMAIL ADDRESS</th>
                <th>PHONE</th>
                <th>STATUS</th>
                <th>&nbsp;</th>
            </thead>
            <tbody>
                {{#each ap_res}}
                <tr>
                    <td>{{appeal_id}}</td>
					<td>{{ap_name}}</td>
					<td>{{ap_email}}</td>
					<td>{{ap_phone}}</td>
                    <td>{{ap_stat}}</td>
					<td><button class="edit-btn btn btn-secondary" data-id="{{appeal_id}}" data-bs-toggle="modal" data-bs-target="#edit-modal">Edit</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    document.getElementById("btnNew").onclick = function () {
        location.href = "/appeals/add";
    };
</script>